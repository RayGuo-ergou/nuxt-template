  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "start": "node .output/server/index.mjs",
    "serve": "serve dist/",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "postinstall": "nuxt prepare && husky install && prisma generate",
    "clean": "rm -rf .nuxt dist .output",
    "prepare": "husky install",
    "vercel-build": "prisma generate && prisma migrate deploy && nuxt build",
    "database:dev": "prisma generate && prisma migrate dev",
    "database:reset": "prisma migrate reset --force",
    "database:deploy": "prisma generate && prisma migrate deploy"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@ergou_rrrr/eslint-config": "^0.0.4",
    "@nuxt/devtools": "latest",
    "@prisma/client": "^5.5.2",
    "@trpc/client": "^10.43.1",
    "@trpc/server": "^10.43.1",
    "@types/node": "^20.8.10",
    "@unocss/eslint-config": "^0.57.1",
    "@unocss/nuxt": "^0.57.1",
    "@vueuse/core": "^10.5.0",
    "@vueuse/nuxt": "^10.5.0",
    "eslint": "^8.52.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "nuxt": "^3.8.0",
    "prisma": "^5.5.2",
    "superjson": "^2.2.0",
    "trpc-nuxt": "^0.10.12",
    "typescript": "^5.2.2",
    "vue-tsc": "^1.8.22",
    "zod": "^3.22.4"
  },
  "lint-staged": {
    "**/*.{js,ts,vue,html}": [
      "pnpm lint:fix"
    ]
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  }
}
