  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "start": "node .output/server/index.mjs",
    "serve": "serve dist/",
    "lint": "eslint --ext \".ts,.js,.vue\" --ignore-path .eslintignore .",
    "lintfix": "eslint --fix --ext \".ts,.vue\" --ignore-path .eslintignore .",
    "postinstall": "nuxt prepare && husky install",
    "clean": "rm -rf .nuxt dist .output",
    "prepare": "husky install",
    "vercel-build": "prisma generate && prisma migrate deploy && nuxt build",
    "database:dev": "prisma generate && prisma migrate dev",
    "database:reset": "prisma migrate reset --force",
    "database:deploy": "prisma generate && prisma migrate deploy"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@hypernym/nuxt-anime": "^2.1.1",
    "@nuxt/devtools": "latest",
    "@nuxtjs/eslint-config": "^12.0.0",
    "@nuxtjs/eslint-config-typescript": "^12.1.0",
    "@prisma/client": "^5.3.1",
    "@trpc/client": "^10.38.3",
    "@trpc/server": "^10.38.3",
    "@types/node": "^20.6.2",
    "@unocss/eslint-config": "^0.55.7",
    "@unocss/nuxt": "^0.55.7",
    "@vueuse/core": "^10.4.1",
    "@vueuse/nuxt": "^10.4.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-nuxt": "^4.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "nuxt": "^3.7.3",
    "prettier": "^3.0.3",
    "prisma": "^5.3.1",
    "superjson": "^1.13.1",
    "trpc-nuxt": "^0.10.12",
    "zod": "^3.22.2"
  },
  "lint-staged": {
    "**/*.{js,ts,vue,html}": [
      "pnpm lintfix"
    ]
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  }
}
