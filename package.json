  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "start": "node .output/server/index.mjs",
    "serve": "serve dist/",
    "lint": "eslint --ext \".ts,.js,.vue\" --ignore-path .eslintignore .",
    "lintfix": "eslint --fix --ext \".ts,.vue\" --ignore-path .eslintignore .",
    "postinstall": "nuxt prepare && husky install",
    "clean": "rm -rf .nuxt dist .output",
    "prepare": "husky install",
    "vercel-build": "prisma generate && prisma migrate deploy && nuxt build",
    "database:reset": "prisma migrate reset --force",
    "database:deploy": "prisma generate && prisma migrate deploy"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@hypernym/nuxt-anime": "^2.1.0",
    "@nuxt/devtools": "latest",
    "@nuxtjs/eslint-config": "^12.0.0",
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "@prisma/client": "^4.16.1",
    "@trpc/client": "^10.33.0",
    "@trpc/server": "^10.33.0",
    "@types/node": "^18",
    "@unocss/eslint-config": "^0.53.4",
    "@unocss/nuxt": "^0.53.4",
    "@vueuse/core": "^10.2.1",
    "@vueuse/nuxt": "^10.2.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-nuxt": "^4.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "nuxt": "^3.6.1",
    "prettier": "^2.8.8",
    "prisma": "^4.16.1",
    "superjson": "^1.12.4",
    "trpc-nuxt": "^0.10.5",
    "zod": "^3.21.4"
  },
  "lint-staged": {
    "**/*.{js,ts,vue,html}": [
      "pnpm lintfix"
    ]
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  }
}
